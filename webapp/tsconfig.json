{
  "compilerOptions": {
    "target": "es5", // 컴파일 된 결과물이 어느 버전의 ECMAScript를 따를 것인지
    "noImplicitAny": true, // any 타입으로 구현된 표현식 혹은 정의를 에러처리 할 것인가
    "module": "esnext", // 프로그램에서 사용할 모듈 시스템. import/export 코드가 어떤 방식의 코드로 컴파일 될지 결정한다
    "allowJs": true, // js files를 허용할 것인가
    "jsx": "react", // jsx 코드를 어떻게 컴파일 할 것인가
    "lib": ["es6", "dom"], // 컴파일 시 포함시켜야하는 javascript 내장 API들의 타입 정의에 대한 정보들
    "noEmit": true, // 컴파일러가 js 파일 등 출력 결과물을 만들지 않을 것인가
    "moduleResolution": "node", // 모듈 해석 전략. 웬만해선 node로 고정할 것
    "isolatedModules": true, // 각 파일을 분리된 모듈로 트랜스파일링할 것인가
    "downlevelIteration": true, // 사용되지 않는 지역 변수에 대해 에러를 발생시킬 것인가
    "strict": true, // strict family 속성 전부를 true로 할 것인가
    "experimentalDecorators": true, // 표준화 프로세스의 2단계에 있는 데코레이터에 대한 실험 지원을 활성화
    "importHelpers": true, // 파일당 포함하는 대신 프로젝트당 한 번 tslib에서 도우미 함수 가져오기 허용
    "resolveJsonModule": true, // .json 파일 가져오기 활성화
    "allowSyntheticDefaultImports": true, // 모듈에 기본 내보내기가 없는 경우 'y에서 x 가져오기'를 허용
    "outDir": "./dist/", // 빌드된 결과물이 저장될 디렉토리를 지정
    "baseUrl": ".", // 비상대적 import 모듈 해석시 기준이 되는 경로
    "paths": {
      // 컴파일러가 이해할 수 있게 절대경로 지정
      "@shared-components/*": ["../shared-components/src/*"],
      "@core/*": ["../core/*"],
      "*": ["src/*"]
    }
  },
  "include": ["src/**/*", "../shared-components/src/**/*", "../core/**/*"] // 변환할 폴더를 지정
  // "exclude": ["node_modules"] // 변환하지 않을 폴더 경로 지정
}
